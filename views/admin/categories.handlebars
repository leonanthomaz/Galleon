

{{#each categories}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{name}}</h4>
            <small>{{slug}}</small><br>
            <h6>{{date}}</h6>
            <a href="/admin/categories/edit/{{_id}}">
            <div class="btn btn-success mt-4">Editar categoria</div>
            </a>
            <form action="/admin/categories/delete" method="POST">
                <input type="hidden" name="id" value="{{_id}}">
                <button type="submit" class="btn btn-danger mt-4">Deletar</button>
            </form>
        </div>
    </div><br>
{{else}}
<h4 class="mt-3">Nenhuma categoria registrada!</h4>
{{/each}}