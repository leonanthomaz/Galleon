<h2>Editar categoria</h2>
<div class="card mt-4">
    <div class="card-body">
    <fieldset>
    <form action="/admin/categories/edit/" method="POST">
            <input type="hidden" name="id" value="{{categories._id}}">
            <label for="name">Nome</label>
            <input type="text" id="name" name="name" placeholder="Digite uma Nova categoria" class="form-control" value="{{categories.name}}">
            <label for="slug">Slug</label>
            <input type="text" id="slug" name="slug" placeholder="slug categoria"  class="form-control" value="{{categories.slug}}"><br>
            <button type="submit" class="btn btn-primary btn-sm">Editar nova categoria</button>
            
        </form>
    </fieldset>
    </div>
</div>