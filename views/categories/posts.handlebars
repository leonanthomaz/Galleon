<h1>{{categories.name}}</h1>
{{#each posts}}
<div class="card">
  <div class="card-body">
    <h4 class="c">{{title}}</h4>
    <p class="card-text">{{desc}}</p>
    <p class="card-text">{{content}}</p>
    <a href="/postagem/{{slug}}"><button type="button" class="btn btn-outline-success">Leia mais</button></a>
    <hr>
    <small>{{date}}</small>
  </div>
</div>
{{else}}
    <h5>Nenhuma postagem.</h5>
{{/each}}